<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:backgroundTint="@color/black09"
    android:background="@drawable/rounded_boarder"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OOO님의 모임"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
       />

    <TextView
        android:id="@+id/subscription"
        style="@style/TextStyle.body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023.11.30"
        android:textSize="18dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/green01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time"
        style="@style/TextStyle.body1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="7:00"
        android:textColor="@color/green01"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toRightOf="@id/subscription"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_2"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:text="AM"
        android:textColor="@color/green01"
        android:textSize="17dp"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toRightOf="@id/time"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toLeftOf="@id/location"
        android:layout_marginRight="4dp"
        android:src="@drawable/place"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/location"
        style="@style/TextStyle.body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치"
        android:textColor="@color/green01"
        android:textSize="18dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"  />


</androidx.constraintlayout.widget.ConstraintLayout>
